
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<!-- Navbar Start -->
<div class="container-fluid mb-5">
    <div class="row border-top px-xl-5">
        <div class="col-lg-3 d-none d-lg-block">
            <a class="btn shadow-none d-flex align-items-center justify-content-between text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px; background-color: #33CCFF; ">
                <h6 class="m-0">Danh mục sản phẩm</h6>
                <i class="fa fa-angle-down text-dark"></i>
            </a>
            @Html.Action("GetProductsByCategory", "CustomerProduct")
        </div>
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class=" font-weight-bold border px-3 mr-1" style="color:#00FFFF;">N</span>Shopping</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a class="nav-link" href="~/CustomerProduct">Trang chủ</a>
                        <a class="nav-link" href="~/Admin/Login">Quản lý</a>
                        <a class="nav-link" href="~/CustomerProduct/Shop">Mua sắm</a>
                        <a class="nav-link" href="~/CustomerProduct/Contact">Liên hệ</a>
                    </div>
                    <div class="navbar-nav ml-auto py-0">
                        @if (Session["TaiKhoan"] != null && Session["TaiKhoan"] is DemoWeb2.Models.Customer customer)
                        {
                            <p class="nav-item nav-link">Hello @customer.NameCus</p>
                            <a href="~/Users/Logout" class="nav-item nav-link">Đăng xuất</a>
                        }
                        else
                        {
                            <a href="~/Users/Login" class="nav-item nav-link">Đăng nhập</a>
                            <a href="~/Users/Register" class="nav-item nav-link">Đăng ký</a>
                        }
                    </div>

                </div>
            </nav>
            <!-- Page Header Start -->
            <div class="container-fluid bg-secondary mb-5">
                <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
                    <h1 class="font-weight-semi-bold text-uppercase mb-3">Liên hệ</h1>
                    <div class="d-inline-flex">
                        <p class="m-0"><a href="~/CustomerProduct" style="color: #33CCFF;">Trang chủ</a></p>
                        <p class="m-0 px-2">-</p>
                        <p class="m-0">Liên hệ</p>
                    </div>
                </div>
            </div>
            <!-- Page Header End -->
        </div>
    </div>
</div>
<!--Navbar End -->
<!-- Contact Start -->
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Liên hệ với chúng tôi</span></h2>
    </div>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form">
                <div id="success"></div>
                <div class="d-flex flex-column mb-3">
                    <h5 class="font-weight-semi-bold mb-3">N Shopping </h5>
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>10 Quốc lộ 22, Tân Xuân, Hóc Môn,Thành phố Hồ Chí Minh</p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>20dh110764@st.huflit.edu.vn</p>
                    <p class="mb-2"><i class="fa fa-phone-alt text-primary mr-3"></i>+012 345 67890</p>
                </div>
                <form name="sentMessage" id="contactForm" novalidate="novalidate">
                    <div class="control-group">
                        <input type="text" class="form-control" id="name" placeholder="Họ và tên"
                               required="required" data-validation-required-message="Please enter your name" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="email" class="form-control" id="email" placeholder="Email"
                               required="required" data-validation-required-message="Please enter your email" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <textarea class="form-control" rows="6" id="message" placeholder="Nội dung"
                                  required="required"
                                  data-validation-required-message="Please enter your message"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div>
                        <button class="btn py-2 px-4" type="submit" id="sendMessageButton" style="background-color:#33CCFF;">
                            Gửi liên hệ
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-5 mb-5">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d799.9528358196445!2d106.60020769401474!3d10.865432395735544!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752b088de30f3b%3A0xd2140740d360f705!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBOZ2_huqFpIG5n4buvIC0gVGluIGjhu41jIFRQLiBIQ00gKEhVRkxJVCkgLSBDxqEgc-G7nyBIw7NjIE3DtG4!5e0!3m2!1svi!2s!4v1680671613668!5m2!1svi!2s"
                    width="600" height="475" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</div>
<!-- Contact End -->
