@model DemoWeb2.Models.OrderPro

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div style="margin: 10px auto; width: 70%;">
    <h2 class="text-center">CHỈNH SỬA ORDER</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group" style="font-weight:600">
        NGÀY ĐẶT
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateOrder, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateOrder, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="font-weight:600">
        KHÁCH HÀNG
        <div class="col-md-10">
            @if (ViewBag.CustomerList is SelectList)
            {
                @Html.DropDownListFor(model => model.IDCus, (SelectList)ViewBag.CustomerList, "-- Select Customer --", new { @class = "form-control" })
            }
            else
            {
                @Html.DropDownListFor(model => model.IDCus, new SelectList(new List<SelectListItem>()), "-- Select Customer --", new { @class = "form-control" })
            }
            @Html.ValidationMessageFor(model => model.IDCus, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group" style="font-weight:600">
        ĐỊA CHỈ GIAO HÀNG
        <div class="col-md-10">
            @Html.EditorFor(model => model.AddressDeliverry, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AddressDeliverry, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="LƯU" class="btn btn-success" />
        </div>
    </div>
</div>
        <table class="table">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Sản phẩm</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Products.Count; i++)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => m.Products[i].NamePro)</td>
                        <td>@Html.DisplayFor(m => m.Products[i].Price)</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div>
        @Html.ActionLink("TRỞ LẠI", "Index")
    </div>
</div>
