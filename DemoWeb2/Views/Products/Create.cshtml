@model DemoWeb2.Models.Product

@{
    ViewBag.Title = "Sản phẩm";
    ViewBag.headTitle = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_admin_Layout.cshtml";
}
    @using (Html.BeginForm("Create", "Products", FormMethod.Post, new
    {
        @enctype = "multipart/form-data"
    }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-12">
                    <div class="tile">
                        <h3 class="tile-title">Nhập thông tin sản phẩm</h3>
                        <div class="tile-body">
                            <div class="row element-button">
                                <div class="col-sm-2">
                                    <a class="btn btn-add btn-sm" href="@Url.Action("Index","Categories")">
                                        <i class="fas fa-folder"></i> Danh sách danh mục
                                    </a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label class="control-label">Tên sản phẩm </label>
                                    @Html.EditorFor(model => model.NamePro, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NamePro, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-6">
                                    <label class="control-label">Danh mục </label>
                                    @Html.DropDownList("Category", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-12">
                                    <label class="control-label">Mô tả </label>
                                    <textarea id="editDec" name="DecriptionPro" class="form-control"></textarea>
                                    @Html.ValidationMessageFor(model => model.DecriptionPro, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-6">
                                    <label class="control-label">Giá </label>
                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-6">
                                    <label class="control-label">Hình ảnh</label>
                                    <br />
                                    <input type="file" name="ImagePro" />
                                    @Html.ValidationMessageFor(model => model.ImagePro, "", new { @class = "text-danger" })
                                    <div id="thumbbox">
                                        <img height="450" width="400" alt="Thumb image" id="thumbimage"
                                             style="display: none" />
                                        <a class="removeimg" href="javascript:"></a>
                                    </div>
                                    <div id="boxchoice">
                                        <a href="javascript:" class="Choicefile">
                                            <i class="fas fa-cloud-upload-alt"></i>
                                            Chọn ảnh
                                        </a>
                                        <p style="clear:both"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-add" />
                                @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-app" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    }
</div>
@section scripts{
    <script>
        CKEDITOR.replace('editDec')
    </script>
}



