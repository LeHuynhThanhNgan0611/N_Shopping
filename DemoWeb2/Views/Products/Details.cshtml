@model DemoWeb2.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style>
    th, td {
        padding: 5px;
        text-align: left;
    }
</style>
<h2 style="text-align: center">CHI TIẾT SẢN PHẨM</h2>
<hr />
<dl class="dl-horizontal">
    <div class="row">
        <div class="col-sm-6 ">  
             <img class="card-img-bottom" src="~/Images/@Model.ImagePro" alt="Card image" style="width:100%">
        </div>
        <div class="col-sm-6">
            <table class="table">
                <tbody>
                    <tr>
                        <th class="table-success">Tên sản phẩm</th>
                        <td>@Html.DisplayFor(model => model.NamePro)</td>
                    </tr>
                    <tr>
                        <th class="table-success">Mô tả</th>
                        <td>@Html.DisplayFor(model => model.DecriptionPro)</td>
                    </tr>
                    <tr>
                        <th class="table-success">Giá</th>
                        <td>@Html.DisplayFor(model => model.Price)</td>
                    </tr>
                    <tr>
                        <th class="table-success">Nhóm sản phẩm</th>
                        <td>@Html.DisplayFor(model => model.Category1.NameCate)</td>
                    </tr>
                </tbody>
            </table>
            <p>
                @Html.ActionLink("SỬA", "Edit", new { id = Model.ProductID }, new
                {
                    @class = "btn btn-success"
                })
                @Html.ActionLink("TRỞ LẠI", "Index")
            </p>
        </div>
    </div>
 </dl>