@model DemoWeb2.Models.Category

@{
    ViewBag.Title = "Chỉnh sửa";
    ViewBag.headTitle = "Chỉnh sửa danh mục";
    Layout = "~/Views/Shared/_admin_Layout.cshtml";
}

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">

                <div class="modal-body">
                    <div class="row">
                        <div class="form-group  col-md-12">
                            <span class="thong-tin-thanh-toan">
                                <h5>Chỉnh sửa thông tin danh mục</h5>
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label class="control-label">Mã danh mục</label>
                            @Html.EditorFor(model => model.IDCate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.IDCate, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-12">
                            <label class="control-label">Tên danh mục</label>
                            @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br>
                    <input type="submit" value="Save" class="btn btn-save" />
                    @Html.ActionLink("Hủy bỏ", "Index", "Categories", new { @class = "btn btn-cancel" })
                    <br>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
     </div>
     }
