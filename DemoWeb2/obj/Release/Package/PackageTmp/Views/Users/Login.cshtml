
﻿@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}


<link href="~/Content/css/formlogin.css" rel="stylesheet" />
<div class="wrapper">
    <h1>Đăng nhập</h1>
    <div class="social-icons">
        <a href="https://accounts.google.com/o/oauth2/auth?client_id=1098593658235-tt8iff6m9tg8l2cfdngofo6j3phtc5dn.apps.googleusercontent.com&redirect_uri=https://localhost:59750/Login/GoogleLoginCallback&scope=https://www.googleapis.com/auth/userinfo.profile&response_type=code&state=asdafwswdwefwsdg">
            <i class="fa-brands fa-google"></i>
        </a>
        <a href=""><i class="fa-brands fa-facebook-f"></i></a>
        <a href=""><i class="fa-brands fa-instagram"></i></a>
        @*<a target="_blank" href="@ViewBag.response"><i class="fa-brands fa-google"></i></a>*@
        @*<a href=""><i class="fa-brands fa-google"></i></a>*@
    </div>
    @using (Html.BeginForm("Login", "Users"))
    {
        @Html.ValidationSummary(true)
        <div class="input-box">
            <input type="text" placeholder="Tên đăng nhập" name="NameCus" required>
            <i class="fa-solid fa-user"></i>
        </div>
        <div class="input-box">
            <input type="password" placeholder="Mật khẩu" name="PassCus" required>
            <i class="fa-solid fa-lock"></i>
        </div>
        <div class="remember-forgot">
            <label>
                <input type="checkbox">
            </label>
            <a href="#">Quên mật khẩu?</a>
        </div>
        <button type="submit" class="btn">
            Đăng nhập
        </button>
        <div class="register-link">
            <p>
                Bạn chưa có tài khoản?
                <a href="@Url.Action("Register", "Users")">Đăng ký</a>
            </p>
        </div>
    }
</div>
<style>
    .social-icons {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 20%;
        background: transparent;
        backdrop-filter: blur(20px);
    }

        .social-icons a i {
            font-size: 22px;
            color: #fff;
            margin: 30px 50px 0 50px;
            transition: .5s ease;
        }

        .social-icons a:hover i {
            transform: scale(1.2);
        }
</style>